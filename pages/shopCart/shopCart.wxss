/* pages/shopCart/shopCart.wxss */
/*空购物车*/
.empty-wrapper {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 120rpx;
}
.empty-text {
  font-size: 32rpx;
  color: #a0a0a0;
}
.empty-text + .empty-text {
  margin: 22rpx 0;
}
.emphasis {
  color: #a5a5a5;
  font-size: 40rpx;
  font-weight: bold;
}
.empty-button {
  font-size: 28rpx;
  border: 4rpx solid #ed7a74;
  color: #ed7a74;
  border-radius: 20rpx;
  padding: 0rpx 66rpx;
}
.empty-button::after {
  border: none;
  outline: none;
}

/*购物车 - 结算*/
.cart-wrapper {
  width: 100%;
}
.cart-checkout-wrapper{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-top: 10rpx solid #f5f5f5;
  background: #fff;
}
.select-all-wrapper {
  flex: 1.5;
  padding-left: 30rpx;
}
.select-all-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #616161;
  margin-left: 22rpx;
}
.cart-price-wrapper {
  flex: 1.5;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-end;
  padding-right: 30rpx;
}
.total-price {
  font-size: 24rpx;
  color: #eb544d
}
.transport-fee {
  font-size: 24rpx;
  color: #a3a3a3
}
.checkout-button {
  flex: 1;
  background: #eb544d;
  color: #fff;
  font-size: 28rpx;
  line-height: 100rpx;
  border-radius: 0;
}
.checkout-button::after{
  border: none;
  outline: none;
}

/*购物车 - 购物车店铺*/
.cart-shop-wrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-top: 22rpx;
  padding-bottom: 22rpx;
}
.shop-checkbox {
  flex: 1;
  margin-left: 22rpx;
}
.shop-title-wrapper {
  flex: 7;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.shop-title {
  font-size: 32rpx;
  margin-left: 12rpx;
  color: #9c9c9c;
}
.shop-icon {
  width: 40rpx;
  height: 40rpx;
}
.edit-wrapper {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.edit-text {
  font-size: 32rpx;
  color: #c5c5c5;
}

/*购物车 - 条目*/
.cart-item-wrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #fafafa;
  padding: 10rpx 0;
}
.item-checkbox {
  flex: 1;
  margin-left: 22rpx;
}
.item-pic {
  flex: 2;
  height: 180rpx;
  margin-left: -20rpx;
}
.item-message-wrapper {
  flex: 4;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
  padding-left: 12rpx;
}
.item-title {
  font-size: 24rpx;
  flex: 1;
  margin-bottom: 22rpx;
}
.item-per-price {
  font-size: 24rpx;
  color: #ec534d;
  flex: 1;
  font-weight: bold;
  margin-top: 22rpx;
}
.item-number {
  flex: 1.5;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.number {
  flex: 1;
  font-size: 28rpx;
}
.delete-button {
  font-size: 28rpx;
  background: #ec534d;
  color: #fff;
  width: 100%;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.delete-button::after{
  border: none;
  outline: none;
}
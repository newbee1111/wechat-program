/* pages/mall/mall.wxss */
.container {
  background: #f5f5f5;
}
.filter-button-wrapper {
  background: #fff;
  border-top: 2rpx solid #f3f3f3;
  border-bottom: 16rpx solid #f5f5f5;
  width: 100%;
  display: flex;
  flex-direction: row;
  min-height: 80rpx;
  align-items: center;
  justify-content: space-around;
}
.filter-button {
  flex: 1;
  outline: none;
  border: none;
  background: #fff;
  color: #000;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.filter-button::after {
  outline: none;
  border: none;
}
.filter-special {
  flex: .8;
  border: 1px solid red;
  margin-right: 32rpx;
}
.shop-wrapper {
  width: 100%;
}
.filter-modal-wrapper {
  position: fixed;
  z-index: 1000;
  background: rgba(0, 0, 0, .3);
  width: 100%;
  height: 100%;
  top: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
.noscroll {
  top:0px;
  left: 0px;
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: fixed;
  z-index: 0;
}
.filter-modal {
  height: 100%;
  width: 30%;
  background: #fff;
}
.filter-modal-button {
  font-size: 28rpx;
  background: #fff;
}
.filter-modal-button::after {
  border: none;
  outline: none;
}
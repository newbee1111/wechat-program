/* components/ShopItem/ShopItem.wxss */
.shop-item-wrapper {
  width: 48%;
  display: inline-flex;
  flex-direction: column;
  align-items: flex-start;
  border-bottom: 12rpx solid #f5f5f5;
  padding-bottom: 8rpx;
  margin-left: 1%;
  background: #fff;
  position: relative;
}
.item-image-wrapper {
  flex: 2;
  width: 100%;
  margin-top: -28rpx;
}
.item-image {
  width: 100%;
}
.item-message-wrapper {
  margin-top: -40rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 0 22rpx;
}
.item-title {
  display: flex;
  font-size: 26rpx;
  font-weight: bold;
  height: 52rpx;
}
.item-price {
  display: flex;
  margin-top: 36rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #ed772f
}
.item-detail-wrapper {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content:center;
  align-items: center;
}
.item-already-sold {
  flex: 1;
  font-size: 24rpx;
  font-weight: bold;
  color: #c1c1c1
}
.item-cart-proccessor {
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}
.sub-button {
  color: #ed772f
}
.add-button {
  background: #ed772f;
  color: #fff;
}
.sub-button, .add-button {
  border-radius: 50%;
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  padding: 0;
  line-height: 50rpx;
}
.sub-button::after, .add-button::after {
  border:none;
  outline: none;
}
.current-number {
  font-size: 32rpx;
  margin: 0 12rpx;
  color: #ed772f;
}